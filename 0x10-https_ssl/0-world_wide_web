#!/usr/bin/env bash
# Configure your domain zone so that the subdomain www
# points to your load-balancer IP (lb-01).
# Letâ€™s also add other subdomains to make our life easier,
# and write a Bash script
# that will display information about subdomains.

display_info() {
    script=$(dig "$2"."$1" | grep -A1 'ANSWER SECTION:' | tr '\t' '\n' | tail -2 | tr '\n' ' ')
    echo "$2 $script" | awk '{print "The subdomain " $1 " is a " $2 " record and points to " $3}'
}

domain=$1
subdomain=$2

if [ "$#" == 1 ]; then
    display_info "$domain": "www"
    display_info "$domain": "lb-01"
    display_info "$domain": "web-01"
    display_info "$domain" "web-02"
elif [ "$#" == 2 ]; then
    display_info "$domain" "$subdomain"
fi
